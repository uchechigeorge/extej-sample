                <nav class="sidebar-scroll">
                    <ul class="main">
                        <li>
                            <a>Markets</a>
                        </li>
                        <li>
                            <a>Trading</a>
                        </li>
                        <li class="active">
                            <a>Wallet</a>
                        </li>
                            <ul class="sub">
                                <li><a>Wallet layout #1</a></li>
                                <li><a>Wallet layout #2</a></li>
                                <li><a>Wallet layout #3</a></li>
                                <li><a>Wallet layout #4</a></li>
                                <li><a>Wallet layout #5</a></li>
                                <li><a>Wallet layout #6</a></li>
                                <li><a>Wallet layout #7</a></li>
                                <li><a>Wallet layout #8</a></li>
                                <li class="active-sub"><a>Wallet layout #9</a></li>
                                <li><a>Wallet layout #10</a></li>
                            </ul>
                        <li>
                            <a>Loans</a>
                        </li>
                        <li>
                            <a>Vaults</a>
                        </li>
                        <li>
                            <a>Portfolio</a>
                        </li>
                        <li>
                            <a>Liquidity pools</a>
                        </li>
                        <li>
                            <a>Swap</a>
                        </li>
                    </ul>
                </nav>
            </aside>
            @RenderBody()
        </div>
    </div>

